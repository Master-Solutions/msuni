{
  "name": "root",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b ./packages",
    "watch": "tsc -b ./packages --watch",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna run test --scope=@uni/core --scope=@uni/react",
    "clean": "yarn run clean-dist && yarn run clean-logs",
    "clean-dist": "rimraf packages/**/dist && rimraf packages/**/tsconfig.tsbuildinfo",
    "clean-deps": "rimraf node_modules && rimraf packages/**/node_modules && rimraf yarn.lock && rimraf packages/**/yarn.lock",
    "clean-logs": "rimraf *.log && rimraf packages/**/*.log",
    "publish": "yarn rebuild && lerna publish"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
